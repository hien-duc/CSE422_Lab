@model Lab2_TranLeHienDuc_CSE422.Models.Device

@{
    ViewData["Title"] = "Device Details";
}

<div class="container mt-4">
    <h1>Device Details</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Code</dt>
                        <dd class="col-sm-8">@Model.Code</dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@(Model.DeviceCategory?.Name ?? "N/A")</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">@Model.Status</dd>

                        <dt class="col-sm-4">Purchase Date</dt>
                        <dd class="col-sm-8">@Model.PurchaseDate.ToShortDateString()</dd>

                        <dt class="col-sm-4">Entry Date</dt>
                        <dd class="col-sm-8">@Model.EntryDate.ToShortDateString()</dd>

                        <dt class="col-sm-4">Assigned To</dt>
                        <dd class="col-sm-8">@(Model.User?.FullName ?? "Not Assigned")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
