@{
    ViewData["Title"] = "Home";
}

<div class="hero-section">
    <div class="hero-content">
        <h1>Device Management System</h1>
        <p>Welcome to your Device Management System for managing devices, categories, and users.</p>
        
        <div class="stats-row">
            <div class="stat-box">
                <span class="stat-number">@ViewBag.DeviceCount</span>
                <span class="stat-label">Devices</span>
            </div>
            <div class="stat-box">
                <span class="stat-number">@ViewBag.CategoryCount</span>
                <span class="stat-label">Categories</span>
            </div>
            <div class="stat-box">
                <span class="stat-number">@ViewBag.UserCount</span>
                <span class="stat-label">Users</span>
            </div>
        </div>
    </div>
</div>

<div class="main-actions">
    <div class="action-grid">
        <div class="action-box">
            <div class="action-icon">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
                </svg>
            </div>
            <h3>Devices</h3>
            <p>Manage and track all your devices</p>
            <div class="action-buttons">
                <a asp-controller="Devices" asp-action="Index" class="btn-primary">View All</a>
                <a asp-controller="Devices" asp-action="Create" class="btn-secondary">Add New</a>
            </div>
        </div>

        <div class="action-box">
            <div class="action-icon">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                </svg>
            </div>
            <h3>Categories</h3>
            <p>Organize devices by categories</p>
            <div class="action-buttons">
                <a asp-controller="DeviceCategory" asp-action="Index" class="btn-primary">View All</a>
                <a asp-controller="DeviceCategory" asp-action="Create" class="btn-secondary">Add New</a>
            </div>
        </div>

        <div class="action-box">
            <div class="action-icon">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
            </div>
            <h3>Users</h3>
            <p>Manage system users</p>
            <div class="action-buttons">
                <a asp-controller="Users" asp-action="Index" class="btn-primary">View All</a>
                <a asp-controller="Users" asp-action="Create" class="btn-secondary">Add New</a>
            </div>
        </div>
    </div>
</div>

