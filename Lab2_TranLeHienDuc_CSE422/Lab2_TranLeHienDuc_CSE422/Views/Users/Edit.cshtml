@model Lab2_TranLeHienDuc_CSE422.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<div class="container">
    <h1>Edit User</h1>

    <div class="form-container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="error-message"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" type="tel" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RoleId">Role</label>
                <select asp-for="RoleId" class="form-control" asp-items="@(new SelectList(ViewBag.Roles, "Id", "Name"))"></select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            
            <div class="button-group">
                <button type="submit" class="button primary">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    Save Changes
                </button>
                <a asp-action="Index" class="button secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                    Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
