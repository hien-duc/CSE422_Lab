@model Lab2_TranLeHienDuc_CSE422.Models.User

@{
    ViewData["Title"] = "User Details";
}

<h1>User Details</h1>

<div class="details-container">
    <div class="details-group">
        <div class="details-label">@Html.DisplayNameFor(model => model.FullName)</div>
        <div class="details-value">@Html.DisplayFor(model => model.FullName)</div>
    </div>
    
    <div class="details-group">
        <div class="details-label">@Html.DisplayNameFor(model => model.Email)</div>
        <div class="details-value">@Html.DisplayFor(model => model.Email)</div>
    </div>
    
    <div class="details-group">
        <div class="details-label">@Html.DisplayNameFor(model => model.PhoneNumber)</div>
        <div class="details-value">@Html.DisplayFor(model => model.PhoneNumber)</div>
    </div>

    <div class="details-group">
        <div class="details-label">@Html.DisplayNameFor(model => model.Role)</div>
        <div class="details-value">@Html.DisplayFor(model => model.Role.Name)</div>
    </div>

    <div class="details-group">
        <div class="details-label">Assigned Devices</div>
        <div class="details-value">@(Model.Devices?.Count ?? 0) devices</div>
    </div>
    
    <div class="button-group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="button primary">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Edit
        </a>
        <a asp-action="Index" class="button secondary">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to List
        </a>
    </div>
</div>

<style>
    .details-container {
        max-width: 800px;
        margin: 0 auto;
    }

    .details-group {
        display: grid;
        grid-template-columns: 150px 1fr;
        align-items: baseline;
        gap: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid #eee;
    }

    .details-label {
        font-weight: 600;
        color: #666;
    }

    .details-value {
        color: #333;
    }

    .button-group {
        margin-top: 2rem;
    }

    .button {
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 0.25rem;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .button svg {
        width: 1.25rem;
        height: 1.25rem;
    }

    .button.primary {
        background-color: #007bff;
        color: #fff;
    }

    .button.primary:hover {
        background-color: #0056b3;
    }

    .button.secondary {
        background-color: #6c757d;
        color: #fff;
    }

    .button.secondary:hover {
        background-color: #5c636a;
    }
</style>
