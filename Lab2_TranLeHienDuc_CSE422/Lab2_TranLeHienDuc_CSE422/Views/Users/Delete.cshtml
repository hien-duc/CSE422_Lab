@model Lab2_TranLeHienDuc_CSE422.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<h1>Delete User</h1>

<div class="details-container">
    <h3 class="text-danger mb-4">Are you sure you want to delete this user?</h3>
    
    <div class="details-group">
        <div class="details-label">@Html.DisplayNameFor(model => model.FullName)</div>
        <div class="details-value">@Html.DisplayFor(model => model.FullName)</div>
    </div>
    
    <div class="details-group">
        <div class="details-label">@Html.DisplayNameFor(model => model.Email)</div>
        <div class="details-value">@Html.DisplayFor(model => model.Email)</div>
    </div>
    
    <div class="details-group">
        <div class="details-label">@Html.DisplayNameFor(model => model.PhoneNumber)</div>
        <div class="details-value">@Html.DisplayFor(model => model.PhoneNumber)</div>
    </div>

    <div class="details-group">
        <div class="details-label">@Html.DisplayNameFor(model => model.Role)</div>
        <div class="details-value">@Html.DisplayFor(model => model.Role.Name)</div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="button-group">
            <button type="submit" class="button danger">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
                Delete
            </button>
            <a asp-action="Index" class="button secondary">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Back to List
            </a>
        </div>
    </form>
</div>

<style>
    .details-container {
        max-width: 800px;
        margin: 0 auto;
    }

    .details-group {
        display: grid;
        grid-template-columns: 150px 1fr;
        align-items: baseline;
        gap: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid #eee;
    }

    .details-label {
        font-weight: 600;
        color: #666;
    }

    .details-value {
        color: #333;
    }

    .button-group {
        margin-top: 2rem;
    }

    .button {
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 0.25rem;
        cursor: pointer;
    }

    .button.danger {
        background-color: #dc3545;
        color: #fff;
    }

    .button.danger:hover {
        background-color: #c82333;
    }

    .button.secondary {
        background-color: #6c757d;
        color: #fff;
    }

    .button.secondary:hover {
        background-color: #5c636a;
    }
</style>
